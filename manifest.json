{
  "manifest_version": 3,
  "name": "Demoody Tab Close Warning",
  "version": "1.0.0",
  "description": "Warn before closing Chrome by keeping a pinned tab active.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "default_title": "Close Warning Tab"
  },
  "permissions": ["tabs"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
